# AWS Integration Example Environment Variables
# Copy this file to .env and update the values

# Application Environment
APP_ENV=development
NODE_ENV=development
PORT=3000
HOST=localhost

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/myapp_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000
DATABASE_SSL=false

# API Configuration
API_KEY=your-api-key-here
API_BASE_URL=https://api.example.com
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-32-characters-long
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_LOGGING=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true
DEBUG_MODE=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Application Tags
TAGS=aws,nestjs,example

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional Services (uncomment to enable)
# REDIS_URL=redis://localhost:6379
# AWS_S3_BUCKET=my-app-bucket
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=password

# AWS Secrets Manager Paths (automatically constructed based on APP_ENV)
# Development: /myapp/development/secrets
# Test: /myapp/test/secrets  
# Production: /myapp/production/secrets

# AWS SSM Parameter Store Paths (automatically constructed based on APP_ENV)
# Development: /myapp/development/config/
# Test: /myapp/test/config/
# Production: /myapp/production/config/