# Custom Schema Configuration Example
# Copy this file to .env and customize the values

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
APP_ENV=local
NODE_ENV=development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
HOST=localhost

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgres://username:password@localhost:5432/myapp_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000
DATABASE_SSL=false

# ===========================================
# REDIS CONFIGURATION (OPTIONAL)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================
API_KEY=your-api-key-here-min-32-chars-long
API_BASE_URL=https://api.example.com
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=12

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_LOGGING=true
ENABLE_METRICS=false
ENABLE_SWAGGER=true
DEBUG_MODE=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ===========================================
# AWS CONFIGURATION
# ===========================================
# AWS_REGION=us-east-1
# AWS_PROFILE=default
# AWS_S3_BUCKET=my-app-bucket

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===========================================
# CUSTOM CONFIGURATIONS
# ===========================================
TAGS=nestjs,aws,config,example
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ===========================================

# For Development Environment:
# APP_ENV=development
# DEBUG_MODE=true
# ENABLE_SWAGGER=true
# LOG_LEVEL=debug

# For Test Environment:
# APP_ENV=test
# DATABASE_URL=postgres://username:password@localhost:5432/myapp_test
# ENABLE_LOGGING=false
# LOG_LEVEL=error

# For Production Environment:
# APP_ENV=production
# DEBUG_MODE=false
# ENABLE_SWAGGER=false
# DATABASE_SSL=true
# LOG_LEVEL=warn
# ENABLE_METRICS=true